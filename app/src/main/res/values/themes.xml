<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/black</item>
         <item name="colorPrimaryVariant">@color/black</item>
         <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.TaskManager" parent="Base.Theme.TaskManager" />


    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.TaskManager</item>

    </style>
</resources>